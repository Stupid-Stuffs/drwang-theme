{%- style %}
.our-story-page {
    img {
        width: 100%;
        height: auto;
    }
    h2 {
        font-size: 2em;
        color: #333;
    }
    h3 {
        font-size: 1.5em;
        color: #666;
    }
    .section-1 {
        padding: 2rem;
        text-align: center;
        position: relative;
        img {
            border: 5px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            position: relative;
            width: 100%;
            height: 600px;
            object-fit: cover;
            object-position: center;
            z-index: 1;
        }
        .text {
            position: absolute;
            top:50%;
            left: 50%;
            transform: translateX(-50%) translateY(-25%);
            z-index: 2;
            padding: 20px;
            border-radius: 10px;
            margin-top: -50px;
            h2 {
                margin: 0;
                font-size: 5rem;
            color: #f1f1f1;
            font-weight: bold;
            }
            h3 {
                margin: 0;
                font-size: 5rem;
                font-weight: light;
            color: #f1f1f1;
            }
        }
    }
    .section-2 {
        padding: 5rem 2rem;
    }
    .section-2 .content {
        padding: 5rem;
	background: {{section.settings.background_color}};
        h2 {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: white;
        }
        p {
            font-weight: 400;
            font-size: 2rem;
	    font-family: Georgia Pro, serif;
	    color: white;
	    margin-bottom: 1rem;
        }
    }
}
{%- endstyle %}
<div class="our-story-page page-width">
    <article class="section-1">
	{{ section.settings.image | img_url: 'master' | img_tag }}
        <div class="text">
		<h2> {{section.settings.heading}} </h2>
		<h3> {{section.settings.subheading}} </h3>
        </div>
    </article>
    <article class="section-2">
        <div class="content">
		<h2>{{section.settings.title}}</h2>
	    {% for block in section.blocks %}
		    <p>{{ block.settings.text }}</p>
	    {% endfor %}
        </div>
    </article>
</div>

{%- schema -%}
{
    "name": "Our Story",
    "settings": [
	{
	    "type": "image_picker",
	    "id": "image",
	    "label": "Image"
	},
	{
	    "type": "text",
	    "id": "heading",
	    "label": "Heading"
	},
	{
	    "type": "text",
	    "id": "subheading",
	    "label": "Subheading"
	},
	{
	    "type": "text",
	    "id": "title",
	    "label": "Title"
	},
	{
	    "type": "color",
	    "id": "background_color",
	    "label": "Background Color"
	}
    ],
    "blocks": [
	{
	    "type": "text",
	    "name": "Text",
	    "settings": [
		{
		    "type": "text",
		    "id": "text",
		    "label": "Text"
		}
	    ]
	}
    ]
}
{%- endschema -%}
