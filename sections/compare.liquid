{%- style -%}
.compare {
	display: flex;
	flex-direction: column;
	align-items:center;
.compare-title {
	font-size: 2.5rem;
	font-weight: 700;
	color: #233a96;
	text-transform: uppercase;
}
.compare-image {
	width: 100%;
    img {
	width: 100%;
	max-width: 100rem;
    }
}
}

@media (min-width: 750px) {
	.compare {
		.compare-title {
			font-size: 4rem;
		}
		.compare-image {
			img {
			  max-width: 100%;
			}
		}
	}
}
@media (min-width: 1250px) {
	.compare {
		.compare-title {
			font-size: 5rem;
		}
	}
}
{%- endstyle -%}

<article class="page-width compare">
	<h2 class="compare-title">{{section.settings.title}}</h2>
	<div class="compare-image">
		{% if section.settings.image %}
			<picture>
				<source srcset="{{ section.settings.image2 | img_url: 'master' }}" media="(min-width: 750px)">
				<img src="{{ section.settings.image1 | img_url: 'master' }}" alt="{{ section.settings.alt }}">
		{% endif %}
	</div>
</article>

{%- schema -%}
{
  "name": "compare",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image First"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image Second"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Alt",
      "default": "Alt"
    }
  ]
}
{%- endschema -%}
