{%- style %}
.image-with-text-custom {
    position: relative;
    margin-top: 5rem;
    padding: 2rem;
    img {
        width: 100%;
        height: 600px;
        object-fit: cover;
        object-position: top;
    }
    div {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 5rem;
        color: white;
        width: 100ch;
        text-align: right;
        h2 {
            font-size: 5rem;
            color: white;
            margin-bottom: 0.5rem;
            font-weight: bold;
            text-transform: uppercase;
            margin: 0;
        }
        h3 {
            font-size: 5rem;
            margin: 0;
            color: white;
            font-family: Georgia Pro, serif;
        }
        a {
            margin-top: 2rem;
            padding: 2.5rem;
            font-weight: 600;
            font-size: 2.5rem;
        }
    }
}
{%- endstyle %}
<div class="image-with-text-custom page-width">
    <img src="{{ image }}" alt="{{ alt }}" />
    <div>
        <h2>{{ title }}</h2>
        <h3>{{ description }}</h3>
        <a class="button button--secondary" href="#">{{ button }}</a>
    </div>
</div>
