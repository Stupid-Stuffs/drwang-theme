  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  {%- style -%}
    .swiper {
      width: 100%;
      height: 100%;
      position: relative;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      .text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        h2 {
          font-size: 5rem;
          margin-bottom: 1rem;
          font-weight: bold;
          color: white;
        }
        h3 {
          font-size: 2rem;
          font-weight: 400;
          color: white;
        }
      }
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 50vh;
      object-fit: cover;
    }

    .swiper-pagination-bullet {
      width: 20px;
      height: 20px;
      text-align: center;
      line-height: 20px;
      font-size: 12px;
      color: #000;
      opacity: 1;
      background: rgba(0, 0, 0, 0.2);
    }

    .swiper-pagination-bullet-active {
      color: #fff;
      background: #007aff;
    }
    .slide-paginate {
        background: none;
        font-size: 2rem;
        color: #cbb6a3;
        font-weight: 600;
        text-decoration: none;
    }
    .swiper-pagination-bullet-active {
        background: none;
        color: white;
    }
    .swiper-button {
        position: absolute;
        cursor: pointer;
        width: 4rem;
        height: 4rem;
        color: white;
        z-index: 1;
        padding: 1rem;
        border-radius: 50%;
        transition: background 0.3s;
        background: rgba(255, 255, 255, 0.2);
    }
    .swiper-next {
        top: 50%;
        right: 1rem;
        transform: translateY(-50%);
    }
    .swiper-prev {
        top: 50%;
        left: 1rem;
        transform: translateY(-50%);
    }
    .swiper-button:hover {
        background: rgba(255, 255, 255, 0.6);
    }
    {%- endstyle -%}

  <!-- Swiper -->
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
        {%- for slide in slides -%}
            <div class="swiper-slide">
              {{
                slide.settings.image
                | image_url: width: 3840
                | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths
              }}
              <div class="text">
              <h2>{{ slide.settings.heading }}</h2>
              <h3>{{ slide.settings.subheading }}</h3>
              </div>
            </div>
        {%- endfor -%}
    </div>
    <div class="swiper-next swiper-button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
</svg>

    </div>
    <div class="swiper-prev swiper-button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
</svg>

    </div>
    <div class="swiper-pagination"></div>
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Initialize Swiper -->
  <script>
    var swiper = new Swiper(".mySwiper", {
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
        renderBullet: function (index, className) {
          return '<span class="' + className + " slide-paginate" + "" + '">' + "0" + (index + 1) + "</span>";
        },
      },
         navigation: {
        nextEl: ".swiper-next",
        prevEl: ".swiper-button-prev",
      },
    });
  </script>
