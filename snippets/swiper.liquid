{%- style -%}
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper-slide img {
      display: block;
      width: 100px;
      height: 100px;
      object-fit: cover;
    }

    .mySwiper2.swiper {
      width: 100%;
      height: 400px;
      margin-left: auto;
      margin-right: auto;
    }

    .swiper-slide {
      background-size: cover;
      background-position: center;
    }

    .mySwiper2 {
        width: 100%;
        box-sizing: border-box;
    }

    .mySwiper {
      box-sizing: border-box;
      .swiper-wrapper {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
      }
      }


    .mySwiper .swiper-slide {
      width: 100px !important;
      height: 100px !important;
      opacity: 0.4;
    }

    .mySwiper .swiper-slide-thumb-active {
      opacity: 1;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .slider-wrapper {
        display: flex;
        gap: 1rem;
        flex-direction: column-reverse; // change to column to make it vertical
    }
    .mySwiper .swiper-slide {
        margin: 0 !important;
    }
    .swiper-preview {
        img {
            width: 100px;
            height: 100px;
        }
    }
    .slider-button-next, .slider-button-prev {
        width: 3rem;
        height: 3rem;
        position: absolute;
        z-index: 10;
        top: 50%;
        color: white;
        transform: translateY(-50%);
        cursor: pointer;
    }
    .slider-button-next {
        right: 0;
    }
    .slider-button-prev {
        left: 0;
    }
    @media (min-width: 750px){
        .mySwiper2.swiper {
            height: 580px;
        }
        .slider-wrapper {
            gap: 2rem;
        }
        .mySwiper {
        margin-top: 0;
        }
    }
    @media (min-width: 1200px){
        .swiper {
        }
      .slider-wrapper {
        flex-direction: row;
        }
        .mySwiper .swiper-wrapper {
            display: flex;
            flex-direction: column;
        }
        
        .mySwiper {
      width: 100px;
      }

    }
{%- endstyle -%}

