<div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
    <div class="swiper-wrapper">
        {% for image in product.images %}
            <div class="swiper-slide">
                <img src="{{ image.src | img_url: 'master' }}" />
            </div>
        {% endfor %}
    </div>
    <div class="swiper-button-next">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path
            fill-rule="evenodd"
            d="M10.707 3.293a1 1 0 0 1 1.414 1.414L8.414 10l3.707 3.707a1 1 0 1 1-1.414 1.414l-4-4a1 1 0 0 1 0-1.414l4-4a1 1 0 0 1 0 1.414z"
            />
        </svg>
    </div>
    <div class="swiper-button-prev">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path
            fill-rule="evenodd"
            d="M9.293 16.707a1 1 0 0 1-1.414-1.414L11.586 10 7.293 6.293a1 1 0 1 1 1.414-1.414l4 4a1 1 0 0 1 0 1.414l-4 4a1 1 0 0 1-1.414 0z"
            />
